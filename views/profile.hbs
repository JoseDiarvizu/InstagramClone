<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <title>Instagram</title>
  </head>
  <body>
    <nav>
      <h4>Instagram</h4>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/uploadimage">Upload Image</a></li>
        <li><a href="/api/login" method="GET">Logout</a></li>
      </ul>
    </nav>

    <div class="container mt-4 center" style="width:100%;">
      <div class="row center" style="width:100%;">
        <div class="col-8">
          <div class="card text-center" style="width:100%;">
            <div class="card-body">
              <h5 class="card-title">Hey {{user.name}}, welcome back!</h5>
              <p class="card-text">Lorem ipsum dolor sit amet consectetur
                adipisicing elit.
              </p>
              <div class="btn-group" role="group" aria-label="Third group">
                <button
                  type="submit"
                  class="btn btn-primary"
                  data-toggle="modal"
                  data-target="#myModal"
                >
                  Followers
                </button>
              </div>
              <div class="btn-group" role="group" aria-label="Third group">
                <button
                  type="submit"
                  class="btn btn-primary"
                  data-toggle="modal"
                  data-target="#myModal2"
                >
                  Followed
                </button>
              </div>
              <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
            <div class="card-footer text-muted">
              Profile - Instagram
            </div>
          </div>
          {{#each posts}}
            <br />
            <div class="card" style="width: 18rem;">
              <img
                class="card-img-top"
                src={{this.post_image}}
                alt="should be an image"
              />
            </div>
            <h3>Total likes: {{this.likesCount}}</h3>
            <br />
            {{#each comments}}
              <div class="card" style="width: 16rem;">
                <div class="card-body">
                  <p>{{this.content}}</p>
                </div>
              </div>
            {{/each}}
          {{/each}}
        </div>
      </div>

    </div>
    <!-- Followers Modal -->
    <div class="modal fade" id="myModal">
      <div class="modal-dialog">
        <div class="modal-content">

          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Users who follow you</h4>
            <button type="button" class="close" data-dismiss="modal">×</button>
          </div>

          <!-- Modal body -->
          <div class="modal-body">
            <ul class="list-group">
              {{#each followers}}
                <li class="list-group-item">{{this.username}}</li>
              {{/each}}
            </ul>
          </div>

          <!-- Modal footer -->
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-danger"
              data-dismiss="modal"
            >Close</button>
          </div>

        </div>
      </div>
    </div>

    <!-- Followed Modal -->
    <div class="modal fade" id="myModal2">
      <div class="modal-dialog">
        <div class="modal-content">

          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Users you follow</h4>
            <button type="button" class="close" data-dismiss="modal">×</button>
          </div>

          <!-- Modal body -->
          <div class="modal-body">
            <ul class="list-group">
              {{#each followed}}
                <li class="list-group-item">{{this.username}}</li>
              {{/each}}
            </ul>
          </div>

          <!-- Modal footer -->
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-danger"
              data-dismiss="modal"
            >Close</button>
          </div>

        </div>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
  </body>
</html>